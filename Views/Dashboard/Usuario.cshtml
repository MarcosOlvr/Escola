@model ApplicationUser

@{
    Layout = "~/Views/Dashboard/_dashboardLayout.cshtml";
}

<div class="mb-6">
    <div class="text-white text-center">
        <h2 class="text-white">@Model.NomeCompleto</h2>
        <span>@((int.Parse(DateTime.Now.ToString("yyyyMMdd")) - int.Parse(Model.DataNascimento.ToString("yyyyMMdd"))) / 10000) anos</span>
    </div>
    <hr  class="bg-white"/>
    <div class="mb-6">
        <form>
            <div class="form-group">
                <label asp-for="Email" class="h6 text-white"></label>
                <input asp-for="Email" class="form-control" disabled>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="h6 text-dark">Número de telefone</label>
                <input asp-for="PhoneNumber" class="form-control" disabled>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="h6 text-black">Data de nascimento</label>
                <input asp-for="DataNascimento" class="form-control" disabled>
            </div>
            <div class="form-group">
                <label asp-for="DataCadastro" class="h6 text-black">Data de cadastro</label>
                <input asp-for="DataCadastro" class="form-control" disabled>
            </div>
            <div>
                <a asp-action="" asp-controller="" asp-route-userId="@Model.Id" class="btn btn-primary">Modificar informações do usuário</a>
                <a asp-action="" asp-controller="" asp-route-userId="@Model.Id" class="btn btn-danger">Remover usuário</a>
            </div>
        </form>
    </div>
</div>