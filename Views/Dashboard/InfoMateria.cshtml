@model MateriaNaTurmaDTO

@{
    Layout = "~/Views/Dashboard/_dashboardLayout.cshtml";
}

<div class="row mt-4">
    <div class="col-lg-12 mb-lg-0 mb-4">
        <div class="card ">
            <div class="card-header pb-0">
                <div class="row">
                    <div class="col-6">
                        <span class="h6">Turmas com a matéria (@Model.Materia.Nome) cadastrada</span>
                    </div>
                </div>
            </div>
            <hr class="bg-dark" />
            <div class="table-responsive">
                <table class="table align-items-center ">
                    <tbody>
                        @foreach (var turma in Model.Turmas)
                        {
                            <tr>
                                <td class="w-70">
                                    <div class="d-flex px-2 py-1 align-items-center">
                                        <div class="ms-4">
                                            <p class="text-xs font-weight-bold mb-0">Nome</p>
                                            <h6 class="text-sm mb-0">@turma.Nome</h6>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

