@model AddUserTurmaVM

@{
    Layout = "~/Views/Dashboard/_dashboardLayout.cshtml";
}

<h1 class="text-center text-white">Remover usuário da turma</h1>

<div class="mb-6">
    <form asp-action="RemoverUserDaTurmaPost">
        <input hidden asp-for="UserList" />
        <input hidden asp-for="TurmaFK" />
        <input hidden asp-for="UserFK" />
        <div class="form-group">
            <label class="h6 text-white">Professor</label>
            <select asp-for="UserFK" class="form-control" placeholder="Sétimo ano" disabled>
                <option value="0" disabled selected>Selecione uma opção</option>
                @foreach (var user in Model.UserList)
                {
                    <option value="@user.Id">@user.NomeCompleto</option>
                }
            </select>
        </div>
        <div>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModalLong">
                Remover da turma
            </button>
        </div>
        <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Confirmação</h5>
                        <button type="button" class="close btn" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Deseja realmente remover o usuário desta sala?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="bi bi-x"></i> Fechar</button>
                        <input type="submit" value="Deletar" class="btn btn-danger"/>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
