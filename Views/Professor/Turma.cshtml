@model TurmaEAlunos

@{
    ViewData["Title"] = $"{Model.Turma.Nome}";
}

<div class="container p-3">
<h2 class="text-center">@Model.Turma.Nome</h2>
<h3 class="mt-5">Alunos</h3>
<table class="table text-center">
    <thead class="text-white bg-primary">
        <tr>
            <th scope="col">Nome completo</th>
            <th scope="col">Data de nascimento</th>
            <th scope="col"></th>
        </tr>
     </thead>
    <tbody>
        @foreach (var obj in Model.Alunos)
        {
            <tr>
                <td>@obj.NomeCompleto</td>
                <td>@obj.DataNascimento.Day / @obj.DataNascimento.Month / @obj.DataNascimento.Year</td>
                    <td><a asp-controller="Aluno" asp-action="Boletim" asp-route-turmaId="@Model.Turma.Id" asp-route-alunoId="@obj.Id" class="btn btn-primary"><i class="bi bi-info-circle"></i> Mais informações</a></td>            </tr>     
        }
    </tbody>
</table>
<h3 class="mt-5">Professores</h3>
<table class="table text-center">
    <thead class="text-white bg-danger">
        <tr>
            <th scope="col">Nome completo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.Professores)
        {
            <tr>
                <td>@obj.NomeCompleto</td>
            </tr>
        }
    </tbody>
</table>
    <a asp-controller="Professor" asp-action="TurmasGeral" class="btn btn-primary"><i class="bi bi-arrow-left-circle"></i> Voltar</a>
</div>
