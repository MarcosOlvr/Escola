@model List<Turma>

@{
    ViewData["Title"] = "Turmas";
}

<div class="container p-3">
    <h2 class="text-center">Turmas</h2>
    @foreach (var obj in Model)
    {
        <div>
            <p>@obj.Nome</p>
            <a asp-controller="Professor" asp-action="Turma" asp-route-id="@obj.Id">Mais informações</a>
        </div>
    }
    <div class="pb-3"></div>
</div>